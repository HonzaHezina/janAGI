# ---- Postgres ----
# Local dev: one database (janagi) used by everything (n8n + business data).
# Coolify:   create two DBs (n8n + janagi) for isolation. See ARCHITECTURE.md.
POSTGRES_DB=janagi
POSTGRES_USER=janagi
POSTGRES_PASSWORD=change_me

# ---- n8n ----
N8N_PORT=5678
N8N_HOST=0.0.0.0
N8N_PROTOCOL=https
WEBHOOK_URL=https://your-domain.com/
N8N_EDITOR_BASE_URL=https://your-domain.com/
N8N_ENCRYPTION_KEY=change_me_to_32_chars_min

# Timezone
TZ=Europe/Prague
GENERIC_TIMEZONE=Europe/Prague

# ---- OpenAI (Embeddings) ----
OPENAI_API_KEY=change_me

# ---- OpenClaw / Jackie ----
# INTERNAL ONLY: no public ports. Always require auth token.
OPENCLAW_BASE_URL=http://openclaw:18789
OPENCLAW_GATEWAY_TOKEN=change_me

# ---- n8n API (Workflow Builder, optional) ----
N8N_BASE_URL=http://n8n:5678
N8N_API_KEY=change_me
N8N_INTERNAL_URL=http://n8n:5678

# ---- Spec Kit Build (optional) ----
GITHUB_TOKEN=change_me
GITHUB_OWNER=HonzaHezina
WORK_ROOT=/data/janagi-builds
OPENCLAW_PROFILE_GEMINI=google:default
OPENCLAW_PROFILE_COPILOT=github:copilot

# ---- n8n UI Operator (optional) ----
N8N_OPERATOR_EMAIL=operator@example.com
N8N_OPERATOR_PASSWORD=change_me

# ---- MindsDB (Analytics) ----
MINDSDB_STORAGE_DIR=/root/mdb_storage
MINDSDB_PG_USER=mindsdb_ro
MINDSDB_PG_PASSWORD=change_me_mindsdb
# MISTRAL_API_KEY=change_me   # if using Mistral models in MindsDB
