      }
    },
    {
      "name": "Emit event",
      "type": "n8n-nodes-base.postgres",
      "parameters": {
        "operation": "executeQuery",
        "query": "-- TODO (rag.*): rag.log_event('hunter.found', ...)"
      }
    }
  ],
  "connections": {}
